--ignore=packages/lazuli/bin
--ignore=packages/lazuli/test
--ignore=packages/lazuli/tmp

--ignore=vendor
--ignore=tmp
--typed=false

# Sorbet LSP will fail without Watchman in some environments.
--disable-watchman
